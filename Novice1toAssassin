	pause 10
	do talknpc 101 41 c c r3 c
	pause 10
	do talknpc 105 41 c c r3 c
	pause 10
	do autosell
	pause 10
	do talknpc 109 41 c c c c r3 c
	pause 10
	[
	do conf route_randomWalk 1
	do conf attackAuto 2
	do conf itemsGatherAuto 2
	]
	}
}

###############################
###Picks a Class to Teleport###
