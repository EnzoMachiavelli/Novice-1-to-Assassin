automacro training10 {
    exclusive 1
    BaseLevel >= 12
    QuestInactive 7123, 7124, 7126, 7127, 1013
    JobLevel = 10
    JobID 0
    overrideAI 1
    run-once 1
    call {
	[
        do conf route_randomWalk 0
        do conf attackAuto 0
        do conf itemsGatherAuto 0
	do conf lockMap none
        ]
	do move 95 175
        pause 30
        do talknpc 100 29 c c c c c c r0 c r2 c c c c c
        pause 30
    }
}

