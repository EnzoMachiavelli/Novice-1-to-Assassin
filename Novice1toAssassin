####Changing  job to Thief0####
###############################

automacro thiefquest0 {
	InMap moc_ruins, morocc
	QuestInactive 1013
	JobID 0 
	overrideAI 1
	run-once 1
	call {
		do move moc_prydb1 39 125
		pause 2
		release thiefquest0
	}
	timeout 20
}

